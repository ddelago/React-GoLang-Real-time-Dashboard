<?xml version="1.0"?>
<Panel DisplayIndex="#LltSimDisplayIndex" BackgroundColor="#BgColor" VirtualWidth="#PanelWidth" VirtualHeight="#PanelHeight">
    <If Value="@LLT_MENU_VISIBLE">
        <True>
            <PixelStream Y="80" Width="1160" Height="870" HorizontalAlign="Center" Protocol="MJPEG" Host="#LltEdgeHost" Port="#LltPixelStreamPort" Path="video?nativeresolution=1"/>
        </True>
        <False>
            <PixelStream Protocol="MJPEG" Host="#LltEdgeHost" Port="#LltPixelStreamPort" Path="video?nativeresolution=1"/>
        </False>
    </If>

    <If Value="0">
    <!-- top hash -->
        <Rectangle FillColor="0 1 0" LineWidth="1" LineColor="0 0 0" HorizontalAlign="Center" VerticalAlign="Top" Y="-20" Width="8" Height="60"/>
        <!-- bottom hash -->
        <Rectangle FillColor="0 1 0" LineWidth="1" LineColor="0 0 0" HorizontalAlign="Center" VerticalAlign="Bottom" Y="20" Width="8" Height="60"/>
        <!-- left hash -->
        <Rectangle FillColor="0 1 0" LineWidth="1" LineColor="0 0 0" HorizontalAlign="Left" VerticalAlign="Middle" X="20" Width="60" Height="8"/>
        <!-- right hash -->
        <Rectangle FillColor="0 1 0" LineWidth="1" LineColor="0 0 0" HorizontalAlign="Right" VerticalAlign="Middle" X="-20" Width="60" Height="8"/>
        <!-- green cross (center is at 800,600) -->
        <Line Color="0 1 0" LineWidth="2">
            <Vertex X="800" Y="550"/>
            <Vertex X="800" Y="650"/>
        </Line>
        <Line Color="0 1 0" LineWidth="2">
            <Vertex X="750" Y="600"/>
            <Vertex X="850" Y="600"/>
        </Line>
        <!-- blue lines -->
        <Line Color="0 0 1" LineWidth="2">
            <Vertex X="660" Y="575"/>
            <Vertex X="660" Y="625"/>
        </Line>
        <Line Color="0 0 1" LineWidth="2">
            <Vertex X="940" Y="575"/>
            <Vertex X="940" Y="625"/>
        </Line>
        <!-- inner red lines -->
        <Line Color="1 0 0" LineWidth="2">
            <Vertex X="450" Y="520"/>
            <Vertex X="450" Y="680"/>
        </Line>
        <Line Color="1 0 0" LineWidth="2">
            <Vertex X="1150" Y="520"/>
            <Vertex X="1150" Y="680"/>
        </Line>
        <!-- outer red lines -->
        <Line Color="1 0 0" LineWidth="2">
            <Vertex X="100" Y="500"/>
            <Vertex X="100" Y="700"/>
        </Line>
        <Line Color="1 0 0" LineWidth="2">
            <Vertex X="1500" Y="500"/>
            <Vertex X="1500" Y="700"/>
        </Line>
    </If>

    <If Value="@LLT_OVERLAY_VISIBLE">
        <Container X="10" Y="140" Width="200" Height="980">
            <If Value="@LLT_MENU_VISIBLE">
                <True>
                    <Rectangle Height="810" FillColor="0 0 0 0.6"/>
                </True>
                <False>
                    <Rectangle FillColor="0 0 0 0.6"/>
                </False>
            </If>
            <String Y="700" HorizontalAlign="Center" VerticalAlign="Top" Color="#OverlayText" ShadowOffset="4">Rel Pos (m)</String>
            <String X="10" Y="640" HorizontalAlign="Left" VerticalAlign="Top" Color="#OverlayText" ShadowOffset="4">X:</String>
            <String X="190" Y="640" HorizontalAlign="Right" VerticalAlign="Top" Color="#OverlayText" ShadowOffset="4">@LLT_RELPOR_X_POS(%.3f)</String>
            <String X="10" Y="590" HorizontalAlign="Left" VerticalAlign="Top" Color="#OverlayText" ShadowOffset="4">Y:</String>
            <String X="190" Y="590" HorizontalAlign="Right" VerticalAlign="Top" Color="#OverlayText" ShadowOffset="4">@LLT_RELPOR_Y_POS(%.3f)</String>
            <String X="10" Y="540" HorizontalAlign="Left" VerticalAlign="Top" Color="#OverlayText" ShadowOffset="4">Z:</String>
            <String X="190" Y="540" HorizontalAlign="Right" VerticalAlign="Top" Color="#OverlayText" ShadowOffset="4">@LLT_RELPOR_Z_POS(%.3f)</String>
            <String Y="460" HorizontalAlign="Center" VerticalAlign="Top" Color="#OverlayText" ShadowOffset="4">Vel (m/s)</String>
            <String X="10" Y="400" HorizontalAlign="Left" VerticalAlign="Top" Color="#OverlayText" ShadowOffset="4">X:</String>
            <String X="190" Y="400" HorizontalAlign="Right" VerticalAlign="Top" Color="#OverlayText" ShadowOffset="4">@LLT_RELPOR_X_VEL(%.3f)</String>
            <String X="10" Y="350" HorizontalAlign="Left" VerticalAlign="Top" Color="#OverlayText" ShadowOffset="4">Y:</String>
            <String X="190" Y="350" HorizontalAlign="Right" VerticalAlign="Top" Color="#OverlayText" ShadowOffset="4">@LLT_RELPOR_Y_VEL(%.3f)</String>
            <String X="10" Y="300" HorizontalAlign="Left" VerticalAlign="Top" Color="#OverlayText" ShadowOffset="4">Z:</String>
            <String X="190" Y="300" HorizontalAlign="Right" VerticalAlign="Top" Color="#OverlayText" ShadowOffset="4">@LLT_RELPOR_Z_VEL(%.3f)</String>
        </Container>
        <Container X="1390" Y="140" Width="200" Height="980">
            <If Value="@LLT_MENU_VISIBLE">
                <True>
                    <Rectangle FillColor="0 0 0 0.6" Y="810" Height="660" VerticalAlign="Top"/>
                </True>
                <False>
                    <Rectangle FillColor="0 0 0 0.6" Height="830" VerticalAlign="Top"/>
                </False>
            </If>
            <String Y="700" HorizontalAlign="Center" VerticalAlign="Top" Color="#OverlayText" ShadowOffset="4">Rel Att (d)</String>
            <String X="10" Y="640" HorizontalAlign="Left" VerticalAlign="Top" Color="#OverlayText" ShadowOffset="4">R:</String>
            <String X="190" Y="640" HorizontalAlign="Right" VerticalAlign="Top" Color="#OverlayText" ShadowOffset="4">@LLT_RELPOR_R_ATT(%.2f)</String>
            <String X="10" Y="590" HorizontalAlign="Left" VerticalAlign="Top" Color="#OverlayText" ShadowOffset="4">P:</String>
            <String X="190" Y="590" HorizontalAlign="Right" VerticalAlign="Top" Color="#OverlayText" ShadowOffset="4">@LLT_RELPOR_P_ATT(%.2f)</String>
            <String X="10" Y="540" HorizontalAlign="Left" VerticalAlign="Top" Color="#OverlayText" ShadowOffset="4">Y:</String>
            <String X="190" Y="540" HorizontalAlign="Right" VerticalAlign="Top" Color="#OverlayText" ShadowOffset="4">@LLT_RELPOR_Y_ATT(%.2f)</String>
            <String Y="460" HorizontalAlign="Center" VerticalAlign="Top" Color="#OverlayText" ShadowOffset="4">Rate (d/s)</String>
            <String X="10" Y="400" HorizontalAlign="Left" VerticalAlign="Top" Color="#OverlayText" ShadowOffset="4">R:</String>
            <String X="190" Y="400" HorizontalAlign="Right" VerticalAlign="Top" Color="#OverlayText" ShadowOffset="4">@LLT_RELPOR_R_RATE(%.2f)</String>
            <String X="10" Y="350" HorizontalAlign="Left" VerticalAlign="Top" Color="#OverlayText" ShadowOffset="4">P:</String>
            <String X="190" Y="350" HorizontalAlign="Right" VerticalAlign="Top" Color="#OverlayText" ShadowOffset="4">@LLT_RELPOR_P_RATE(%.2f)</String>
            <String X="10" Y="300" HorizontalAlign="Left" VerticalAlign="Top" Color="#OverlayText" ShadowOffset="4">Y:</String>
            <String X="190" Y="300" HorizontalAlign="Right" VerticalAlign="Top" Color="#OverlayText" ShadowOffset="4">@LLT_RELPOR_Y_RATE(%.2f)</String>
        </Container>
        <If Value="@LLT_MENU_VISIBLE">
            <True>
                <Container X="10" Y="960" Width="1580" Height="60">
                    <Rectangle FillColor="0 0 0 0.6"/>
                    <String X="220" HorizontalAlign="Left" VerticalAlign="Middle" Color="#OverlayText" ShadowOffset="4">Range: @LLT_POR_RANGE(% .3f) m</String>
                    <String X="1360" HorizontalAlign="Right" VerticalAlign="Middle" Color="#OverlayText" ShadowOffset="4">Range Rate: @LLT_POR_RANGE_RATE(% .3f) m/s</String>
                </Container>
            </True>
            <False>
                <Container X="10" Y="1130" Width="1580" Height="60">
                    <Rectangle FillColor="0 0 0 0.6"/>
                    <String X="220" HorizontalAlign="Left" VerticalAlign="Middle" Color="#OverlayText" ShadowOffset="4">Range: @LLT_POR_RANGE(% .3f) m</String>
                    <String X="1360" HorizontalAlign="Right" VerticalAlign="Middle" Color="#OverlayText" ShadowOffset="4">Range Rate: @LLT_POR_RANGE_RATE(% .3f) m/s</String>
                </Container>
            </False>
        </If>
        <Container X="210" Y="10" Width="1180" Height="60">
            <Rectangle FillColor="0 0 0 0.6"/>
            <If Value="@LLT_SIM_CONNECTED">
                <True>
                    <If Operator="eq" Value1="@LLT_SIM_MODE" Value2="5">
                        <True>
                            <Circle X="1150" Y="30" Radius="20" FillColor="0 1 0" LineColor="1 1 1"/>
                        </True>
                        <False>
                            <Circle X="1150" Y="30" Radius="20" FillColor="0 0 1" LineColor="1 1 1"/>
                        </False>
                    </If>
                </True>
                <False>
                    <Circle X="1150" Y="30" Radius="20" FillColor="1 0 0" LineColor="1 1 1"/>
                </False>
            </If>
        </Container>
    </If>

    <If Value="@LLT_MENU_VISIBLE">
        <Include>remoteOperationTopMenu.xml</Include>
        <Include>${dcappDisplayHome}/modules/nexsys_common/panels/timebar.xml</Include>
    </If>

    <Button Style="CornerBezelButton" X="#lx" Y="#l8y" SwitchVariable="@REMOTE_HC_MODE_CMD" IndicatorVariable="@REMOTE_HC_MODE_STATUS" On="5" BezelKey="#l8">
        <On><Rectangle Style="CornerBezelButton" FillColor="#ButtonOn .8"/></On>
        <Transition><Rectangle Style="CornerBezelButton" FillColor="#ButtonTrans .8"/></Transition>
        <Off><Rectangle Style="CornerBezelButton" FillColor="#ButtonOff .8"/></Off>
        <String Style="CornerBezelButton">Grab HC\nFocus</String>
    </Button>

    <Button Style="RightBezelButton" Type="Toggle" X="#rx" Y="#r7y" Variable="@LLT_OVERLAY_VISIBLE" BezelKey="#r7">
        <On><Rectangle Style="RightBezelButton" FillColor="#ButtonOn .8"/></On>
        <Off><Rectangle Style="RightBezelButton" FillColor="#ButtonOff .8"/></Off>
        <String Style="RightBezelButton">Overlay\nOn/Off</String>
    </Button>

    <Button Style="CornerBezelButton" Type="Toggle" X="#rx" Y="#r8y" Variable="@LLT_MENU_VISIBLE" BezelKey="#r8">
        <On><Rectangle Style="CornerBezelButton" FillColor="#ButtonOn .8"/></On>
        <Off><Rectangle Style="CornerBezelButton" FillColor="#ButtonOff .8"/></Off>
        <String Style="CornerBezelButton">Menu\nOn/Off</String>
    </Button>

<!-- don't need standard_elements here because sim status is shown via circle indicators above
    <Include>${dcappDisplayHome}/modules/nexsys_common/panels/standard_elements.xml</Include>
-->
    <If Value="@LLT_SIM_CONNECTED">
        <True>
            <If Operator="eq" Value1="@LLT_SIM_MODE" Value2="5">
                <False>
                    <Rectangle FillColor="0 0 1 0.25"/>
                </False>
            </If>
        </True>
        <False>
            <Rectangle FillColor="1 0 0 0.25"/>
        </False>
    </If>
</Panel>
