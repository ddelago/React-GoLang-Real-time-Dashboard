<?xml version="1.0"?>
<DCAPP>
    <Include>${dcappDisplayHome}/modules/nexsys_common/include/environment.xml</Include>
    <Include>panels/include/panelsIndex.xml</Include>

    <!-- Dcapp Trick disconnection behavior -->
    <Constant Name="TrickDisconnectAction">Reconnect</Constant>

    <!-- TrickHost and EdgeHost for DSG sim -->
    <Constant Name="TrickHost">localhost</Constant>
    <Constant Name="TrickPort">17000</Constant>
    <Constant Name="EdgeHost">localhost</Constant>
    <Constant Name="EdgePort">5451</Constant>
    <Constant Name="PixelStreamPort">8080</Constant>

    <!-- Trick I/O Settings -->
    <Constant Name="Fuel">GCH4</Constant>
    <Constant Name="Oxidizer">GOx</Constant>

    <!-- EDGE I/O Settings -->
    <Constant Name="EdgeIoActive">1</Constant>
    <Constant Name="Camera01Label">MPCV\nDP</Constant>
    <Constant Name="Camera01Target">MPCV_DP</Constant>
    <Constant Name="Camera02Label">MPCV\nPilot</Constant>
    <Constant Name="Camera02Target">MPCV_PILOT</Constant>
    <Constant Name="Camera03Label">Stack\nDP</Constant>
    <Constant Name="Camera03Target">NEXTSTEP_STACK_DP</Constant>
    <Constant Name="Camera04Label">Stack</Constant>
    <Constant Name="Camera04Target">NEXTSTEP_Cam1</Constant>
    <Constant Name="Camera05Label">Arm</Constant>
    <Constant Name="Camera05Target">NextSTEPArm_Cam_1</Constant>
    <Constant Name="Camera08Label">AerCam</Constant>
    <Constant Name="Camera08Target">AERO_Cam</Constant>
    <Constant Name="Camera09Label">Telescope</Constant>
    <Constant Name="Camera09Target">TELESCOPE_Cam</Constant>

    <!-- MJPEG Stream Settings -->
    <Constant Name="Stream01Label">Nest Back\nCamera 1</Constant>
    <Constant Name="Stream01Host">192.70.120.236</Constant>
    <Constant Name="Stream01Path">mjpg/video.mjpg?camera=5</Constant>
    <Constant Name="Stream02Label">Nest Back\nCamera 2</Constant>
    <Constant Name="Stream02Host">192.70.120.236</Constant>
    <Constant Name="Stream02Path">mjpg/video.mjpg?camera=6</Constant>
    <Constant Name="Stream03Label">Nest Back\nCamera 3</Constant>
    <Constant Name="Stream03Host">192.70.120.236</Constant>
    <Constant Name="Stream03Path">mjpg/video.mjpg?camera=7</Constant>
    <Constant Name="Stream04Label">Nest Front\nCamera 1</Constant>
    <Constant Name="Stream04Host">192.70.120.237</Constant>
    <Constant Name="Stream04Path">mjpg/video.mjpg?camera=5</Constant>

    <!-- Display Page Enable/Disable flags -->
    <Constant Name="MpcvGncPageActive">1</Constant>
    <Constant Name="PmGncPageActive">1</Constant>
    <Constant Name="RoboticPageActive">1</Constant>
    <Constant Name="SubsystemPageActive">1</Constant>
    <Constant Name="CameraPageActive">1</Constant>
    <Constant Name="RemoteOpsPageActive">1</Constant>

    <!-- Display Settings -->
    <Constant Name="InitialDisplay">1</Constant>
    <Constant Name="HabModuleName">HAB</Constant>
    <Constant Name="AirlockModuleName">Airlock</Constant>
    <Constant Name="VisitingVechileName">MPCV</Constant>
    <Constant Name="HcActive">1</Constant>
    <Constant Name="PMGncActive">1</Constant>
    <Constant Name="MPCVGncActive">1</Constant>
    <Constant Name="FuelLabel">MMH</Constant>
    <Constant Name="OxidizerLabel">N2O4</Constant>
    <Constant Name="RoboticsType">nextstep</Constant>
    <Constant Name="ScenarioID">asteroid</Constant>
    <Constant Name="EnableCmd">1</Constant>
    <Constant Name="HOST_VEHICLE_NAME">HAL</Constant>
    <!-- <Set Variable="@SYSTEM_ALARM_HOST_VEHICLE">HAL</Set> -->

    <!-- Initial display setting for top menus -->
    <Constant Name="InitialHabSubsystemDisplay">132</Constant>
    <Constant Name="InitialHalSubsystemDisplay">32</Constant>
    <Constant Name="InitialMpcvSubsystemDisplay">305</Constant>

    <!-- Rover Sim display config -->
    <Constant Name="RoverTrickHost">localhost</Constant>
    <Constant Name="RoverTrickPort">18000</Constant>
    <Constant Name="RoverEdgeHost">localhost</Constant>
    <Constant Name="RoverEdgePort">5451</Constant>
    <Constant Name="RoverPixelStreamPort">8080</Constant>

    <!-- LLT Sim display config -->
    <Constant Name="LltTrickHost">localhost</Constant>
    <Constant Name="LltTrickPort">19000</Constant>
    <Constant Name="LltEdgeHost">localhost</Constant>
    <Constant Name="LltEdgePort">5451</Constant>
    <Constant Name="LltPixelStreamPort">8080</Constant>

    <Include>${dcappDisplayHome}/include/standard.xml</Include>

    <If Value="#RemoteOpsPageActive">
      <!-- Setup Rover sim Trick and EDGE IO -->
      <TrickIo Host="#RoverTrickHost" Port="#RoverTrickPort" DataRate="0.1" ConnectedVariable="@ROVER_SIM_CONNECTED" DisconnectAction="#TrickDisconnectAction">
          <Include>params/include/rover_fromTrick.xml</Include>
          <Include>params/include/rover_toTrick.xml</Include>
      </TrickIo>
      <EdgeIo Host="#RoverEdgeHost" Port="#RoverEdgePort" DataRate="1.0">
          <Include>params/include/rover_fromEdge.xml</Include>
      </EdgeIo>

      <!-- Setup LLT sim Trick and EDGE IO -->
      <TrickIo Host="#LltTrickHost" Port="#LltTrickPort" DataRate="0.1" ConnectedVariable="@LLT_SIM_CONNECTED" DisconnectAction="#TrickDisconnectAction">
          <Include>params/include/llt_fromTrick.xml</Include>
      </TrickIo>
      <EdgeIo Host="#LltEdgeHost" Port="#LltEdgePort" DataRate="1.0">
          <Include>params/include/llt_fromEdge.xml</Include>
      </EdgeIo>
    </If>

</DCAPP>
