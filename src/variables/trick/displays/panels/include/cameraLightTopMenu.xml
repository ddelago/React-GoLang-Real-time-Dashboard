<?xml version="1.0"?>
<If Value="@CAMERA_FULLSCREEN">
    <False>
        <Button Style="CornerBezelButton" X="#lx" Y="#l1y" BezelKey="#l1">
            <Rectangle Style="CornerBezelButton" FillColor="#ButtonOff"/>
            <Image Width="46" Height="52" HorizontalAlign="Center" VerticalAlign="Middle">${dcappDisplayHome}/modules/nexsys_common/images/home.tga</Image>
            <OnPress>
                <Set Variable="@SUBMENU2_DISPLAY">@ACTIVE_DISPLAY</Set>
                <Set Variable="@ACTIVE_DISPLAY">@SUBMENU1_DISPLAY</Set>
            </OnPress>
        </Button>

        <Button Style="TopBezelButton" X="#t1x" Y="#ty" Variable="@ACTIVE_DISPLAY" On="#CameraSelectDisplay" BezelKey="#t1">
            <On><Rectangle Style="TopBezelButton" FillColor="#ButtonOn"/></On>
            <Off><Rectangle Style="TopBezelButton" FillColor="#ButtonOff"/></Off>
            <String Style="TopBezelButton">Camera\nSelect</String>
        </Button>

        <Button Style="TopBezelButton" X="#t4x" Y="#ty" Variable="@ACTIVE_DISPLAY" On="#TelescopeDisplay" BezelKey="#t4">
            <On><Rectangle Style="TopBezelButton" FillColor="#ButtonOn"/></On>
            <Off><Rectangle Style="TopBezelButton" FillColor="#ButtonOff"/></Off>
            <String Style="TopBezelButton">Telescope\nControl</String>
            <OnPress><Set Variable="@CAMERA_SELECT">#Camera09Target</Set></OnPress>
            <OnPress><Set Variable="@PIXELSTREAMID">0</Set></OnPress>
        </Button>

        <Button Style="TopBezelButton" X="#t5x" Y="#ty" Variable="@ACTIVE_DISPLAY" On="#AerCamControlDisplay" BezelKey="#t5">
            <On><Rectangle Style="TopBezelButton" FillColor="#ButtonOn"/></On>
            <Off><Rectangle Style="TopBezelButton" FillColor="#ButtonOff"/></Off>
            <String Style="TopBezelButton">AerCam\nControl</String>
            <OnPress><Set Variable="@CAMERA_SELECT">#Camera08Target</Set></OnPress>
            <OnPress><Set Variable="@PIXELSTREAMID">0</Set></OnPress>
        </Button>

        <Button Style="TopBezelButton" X="#t6x" Y="#ty" Variable="@ACTIVE_DISPLAY" On="#MpcvLightsControlDisplay" BezelKey="#t6">
            <On><Rectangle Style="TopBezelButton" FillColor="#ButtonOn"/></On>
            <Off><Rectangle Style="TopBezelButton" FillColor="#ButtonOff"/></Off>
            <String Style="TopBezelButton">Light\nControl</String>
        </Button>

        <Button Style="CornerBezelButton" X="#rx" Y="#r1y" BezelKey="#r1">
            <Rectangle Style="CornerBezelButton" FillColor="#ButtonOff"/>
            <Image Width="38" Height="52" HorizontalAlign="Center" VerticalAlign="Middle">${dcappDisplayHome}/modules/nexsys_common/images/up.tga</Image>
            <OnPress>
                <Set Variable="@SUBMENU2_DISPLAY">@ACTIVE_DISPLAY</Set>
                <Set Variable="@ACTIVE_DISPLAY">@SUBMENU1_DISPLAY</Set>
            </OnPress>
        </Button>

        <Set Variable="@MENU_LABEL">Cameras &amp; Lights</Set>
    </False>
</If>
