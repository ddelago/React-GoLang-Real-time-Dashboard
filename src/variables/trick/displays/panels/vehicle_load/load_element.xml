<?xml version="1.0"?>
<Container X="#LoadElementX" Y="#LoadElementY" Width="230" Height="80">

    <If Operator="eq" Value1="#LoadElementGraphic" Value2="heater">
        <True>
            <Constant Name="LoadElementGraphicHeight">20</Constant>
        </True>
        <False>
            <If Operator="eq" Value1="#LoadElementGraphic" Value2="bulb">
                <True>
                    <Constant Name="LoadElementGraphicHeight">40</Constant>
                </True>
                <False>
                    <Constant Name="LoadElementGraphicHeight">64</Constant>
                </False>
            </If>
        </False>
    </If>

    <If Operator="eq" Value1="@#{LoadElementName}_STATUS" Value2="-1">
        <Line LineWidth="2" Color="#LineInactive">
            <Vertex X="0" Y="40"/>
            <Vertex X="33" Y="40"/>
        </Line>
        <Image X="60" Y="40" Width="64" Height="#LoadElementGraphicHeight" HorizontalAlign="Center" VerticalAlign="Middle">${dcappDisplayHome}/modules/subsystems/images/#{LoadElementGraphic}_unpowered.tga</Image>
    </If>
    <If Operator="eq" Value1="@#{LoadElementName}_STATUS" Value2="0">
        <Line LineWidth="2" Color="#LineActive">
            <Vertex X="0" Y="40"/>
            <Vertex X="33" Y="40"/>
        </Line>
        <Image X="60" Y="40" Width="64" Height="#LoadElementGraphicHeight" HorizontalAlign="Center" VerticalAlign="Middle">${dcappDisplayHome}/modules/subsystems/images/#{LoadElementGraphic}_off.tga</Image>
    </If>
    <If Operator="eq" Value1="@#{LoadElementName}_STATUS" Value2="1">
        <Line LineWidth="2" Color="#LineActive">
            <Vertex X="0" Y="40"/>
            <Vertex X="33" Y="40"/>
        </Line>
        <Image X="60" Y="40" Width="64" Height="#LoadElementGraphicHeight" HorizontalAlign="Center" VerticalAlign="Middle">${dcappDisplayHome}/modules/subsystems/images/#{LoadElementGraphic}_on.tga</Image>
    </If>

    <String Size="#VerySmallFont" X="110" Y="40" HorizontalAlign="Left" VerticalAlign="Middle">#LoadElementLabel</String>
</Container>
