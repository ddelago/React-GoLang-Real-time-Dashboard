<?xml version="1.0"?>
<Dummy>
    <If Value="@CAMERA_FULLSCREEN">
        <True>
            <Include>${dcappDisplayHome}/modules/nexsys_common/panels/pixelstreams.xml</Include>
        </True>
        <False>
            <Container X="#DisplayX" Y="#DisplayY" Width="#DisplayWidth" Height="#DisplayHeight">
                <Include>${dcappDisplayHome}/modules/nexsys_common/panels/pixelstreams.xml</Include>
                <If Value="@SHOW_LIGHT_LEVELS">
                    <Container X="10" Y="10" Width="500" Height="96">
                        <Image>${dcappDisplayHome}/modules/nexsys_common/images/translucent.tga</Image>
                        <String Style="Overlay" X="10" Y="50">MPCV DP Light:</String>
                        <String Style="Overlay" X="-10" Y="50" HorizontalAlign="Right">@MPCV_DP_LIGHT_PCTON(%.0f)%</String>
                        <String Style="Overlay" X="10" Y="10">HAB DP Light:</String>
                        <String Style="Overlay" X="-10" Y="10" HorizontalAlign="Right">@HAB_DP_LIGHT_PCTON(%.0f)%</String>
                    </Container>
                </If>
            </Container>

            <!-- Left Bezel Gutter -->
            <Container X="#lgutterx" Y="#l6y" Width="#GutterWidth" Height="#ButtonHeight4">
                <Line LineWidth="1" Color="#FgColor">
                    <Vertex X="#lgutterlinex1" Y="#lgutterliney1"/>
                    <Vertex X="#lgutterlinex2" Y="#lgutterliney2"/>
                    <Vertex X="#lgutterlinex3" Y="#lgutterliney3"/>
                    <Vertex X="#lgutterlinex4" Y="#lgutterliney4"/>
                </Line>
                <String Style="LeftGutter">Light Control</String>
            </Container>

            <!-- Left Bezel -->
            <Button Style="LeftBezelButton" X="#lx" Y="#l3y" IndicatorVariable="@SELECTED_LIGHTS_ON" ActiveVariable="@SELECTED_LIGHTS_BRIGHTABLE" BezelKey="#l3">
                <On><Rectangle Style="LeftBezelButton" FillColor="#ButtonOn"/></On>
                <Transition><Rectangle Style="LeftBezelButton" FillColor="#ButtonTrans"/></Transition>
                <Off><Rectangle Style="LeftBezelButton" FillColor="#ButtonOff"/></Off>
                <Active><String Style="LeftBezelButton">Full\nOn</String></Active>
                <Inactive><String Style="LeftBezelButton" Color="#Inactive">Full\nOn</String></Inactive>
                <OnPress>
                    <If Value="@MPCV_DP_LIGHT_SELECTED"><Set Variable="@MPCV_DP_LIGHT_CMD">2</Set></If>
                    <If Value="@HAB_DP_LIGHT_SELECTED"><Set Variable="@HAB_DP_LIGHT_CMD">2</Set></If>
                </OnPress>
            </Button>
            <Button Style="LeftBezelButton" Type="Momentary" X="#lx" Y="#l4y" ActiveVariable="@SELECTED_LIGHTS_BRIGHTABLE" BezelKey="#l4">
                <On><Rectangle Style="LeftBezelButton" FillColor="#ButtonOn"/></On>
                <Off><Rectangle Style="LeftBezelButton" FillColor="#ButtonOff"/></Off>
                <Active><String Style="LeftBezelButton">Brighter</String></Active>
                <Inactive><String Style="LeftBezelButton" Color="#Inactive">Brighter</String></Inactive>
                <OnPress>
                    <If Value="@MPCV_DP_LIGHT_SELECTED"><Set Variable="@MPCV_DP_LIGHT_DELTA">0.4</Set></If>
                    <If Value="@HAB_DP_LIGHT_SELECTED"><Set Variable="@HAB_DP_LIGHT_DELTA">0.4</Set></If>
                </OnPress>
            </Button>
            <Button Style="LeftBezelButton" Type="Momentary" X="#lx" Y="#l5y" ActiveVariable="@SELECTED_LIGHTS_DIMMABLE" BezelKey="#l5">
                <On><Rectangle Style="LeftBezelButton" FillColor="#ButtonOn"/></On>
                <Off><Rectangle Style="LeftBezelButton" FillColor="#ButtonOff"/></Off>
                <Active><String Style="LeftBezelButton">Dimmer</String></Active>
                <Inactive><String Style="LeftBezelButton" Color="#Inactive">Dimmer</String></Inactive>
                <OnPress>
                    <If Value="@MPCV_DP_LIGHT_SELECTED"><Set Variable="@MPCV_DP_LIGHT_DELTA">-0.4</Set></If>
                    <If Value="@HAB_DP_LIGHT_SELECTED"><Set Variable="@HAB_DP_LIGHT_DELTA">-0.4</Set></If>
                </OnPress>
            </Button>
            <Button Style="LeftBezelButton" X="#lx" Y="#l6y" IndicatorVariable="@SELECTED_LIGHTS_OFF" ActiveVariable="@SELECTED_LIGHTS_DIMMABLE" BezelKey="#l6">
                <On><Rectangle Style="LeftBezelButton" FillColor="#ButtonOn"/></On>
                <Transition><Rectangle Style="LeftBezelButton" FillColor="#ButtonTrans"/></Transition>
                <Off><Rectangle Style="LeftBezelButton" FillColor="#ButtonOff"/></Off>
                <Active><String Style="LeftBezelButton">Full\nOff</String></Active>
                <Inactive><String Style="LeftBezelButton" Color="#Inactive">Full\nOff</String></Inactive>
                <OnPress>
                    <If Value="@MPCV_DP_LIGHT_SELECTED"><Set Variable="@MPCV_DP_LIGHT_CMD">0</Set></If>
                    <If Value="@HAB_DP_LIGHT_SELECTED"><Set Variable="@HAB_DP_LIGHT_CMD">0</Set></If>
                </OnPress>
            </Button>

            <!-- Bottom Bezel -->
            <Button Style="BottomBezelButton" Type="Toggle" X="#b2x" Y="#by" Variable="@SHOW_LIGHT_LEVELS" BezelKey="#b2">
                <On><Rectangle Style="BottomBezelButton" FillColor="#ButtonOn"/></On>
                <Off><Rectangle Style="BottomBezelButton" FillColor="#ButtonOff"/></Off>
                <String Style="BottomBezelButton">Show/Hide\nLight\nLevels</String>
            </Button>

            <!-- Right Bezel -->
            <Button Style="RightBezelButton" Type="Toggle" X="#rx" Y="#r2y" Variable="@MPCV_DP_LIGHT_SELECTED" BezelKey="#r2">
                <On><Rectangle Style="RightBezelButton" FillColor="#ButtonOn"/></On>
                <Off><Rectangle Style="RightBezelButton" FillColor="#ButtonOff"/></Off>
                <String Style="RightBezelButton">MPCV DP\nLight</String>
            </Button>
            <Button Style="RightBezelButton" Type="Toggle" X="#rx" Y="#r3y" Variable="@HAB_DP_LIGHT_SELECTED" BezelKey="#r3">
                <On><Rectangle Style="RightBezelButton" FillColor="#ButtonOn"/></On>
                <Off><Rectangle Style="RightBezelButton" FillColor="#ButtonOff"/></Off>
                <String Style="RightBezelButton">HAB DP\nLight</String>
            </Button>
        </False>
    </If>

    <!-- Right Bezel -->
    <Button Style="CornerBezelButton" Type="Toggle" X="#rx" Y="#r8y" Variable="@CAMERA_FULLSCREEN" BezelKey="#r8">
        <On>
            <Image>${dcappDisplayHome}/modules/nexsys_common/images/translucent.tga</Image>
            <String Style="CornerBezelButton" Color="#OverlayText" ShadowOffset="4">Exit\nFull\nScreen</String>
        </On>
        <Off>
            <Rectangle Style="CornerBezelButton" FillColor="#ButtonOff"/>
            <String Style="CornerBezelButton">Full\nScreen</String>
        </Off>
    </Button>

    <!-- Left Bezel -->
    <Button Style="BottomBezelButton" Type="Toggle" X="#lx" Y="#l8y" Variable="@IDEAL_LIGHTING" On="HIGHLIGHT" Off="!HIGHLIGHT" BezelKey="#l8">
        <On><Rectangle Style="BottomBezelButton" FillColor="#ButtonOn"/></On>
        <Off><Rectangle Style="BottomBezelButton" FillColor="#ButtonOff"/></Off>
        <String Style="BottomBezelButton">Ideal\nLighting</String>
    </Button>


</Dummy>
