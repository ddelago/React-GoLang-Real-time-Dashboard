<?xml version="1.0"?>
<Panel DisplayIndex="#PmGncDisplay" BackgroundColor="#BgColor" VirtualWidth="#PanelWidth" VirtualHeight="#PanelHeight">
    <Constant Name="PARAM_SIM_PRE_NAME">PM</Constant>
    <Constant Name="CMGActive">1</Constant>
    <Constant Name="ControlEffectorRcs">11</Constant>
    <Include>${dcappDisplayHome}/modules/nexsys_common/panels/gnc_mode.xml</Include>
    <Include>${dcappDisplayHome}/modules/nexsys_common/panels/generic_gnc.xml</Include>

    <If Value="@KEYPAD_ACTIVE">
        <False>
            <Button Style="CornerBezelButton" X="#lx" Y="#l8y" SwitchVariable="@REMOTE_HC_MODE_CMD" IndicatorVariable="@REMOTE_HC_MODE_STATUS" On="2" BezelKey="#l8">
                <On><Rectangle Style="CornerBezelButton" FillColor="#ButtonOn"/></On>
                <Transition><Rectangle Style="CornerBezelButton" FillColor="#ButtonTrans"/></Transition>
                <Off><Rectangle Style="CornerBezelButton" FillColor="#ButtonOff"/></Off>
                <String Style="CornerBezelButton">Grab HC\nFocus</String>
            </Button>
            <If Operator="eq" Value1="@#{PARAM_SIM_PRE_NAME}_GNC_SUBDISPLAY" Value2="#GncMainDisplay">
              <!-- Top Bezel -->
              <Include>include/mainDisplayTopMenu.xml</Include>
            </If>
        </False>
    </If>

    <Include>${dcappDisplayHome}/modules/nexsys_common/panels/standard_elements.xml</Include>
</Panel>
